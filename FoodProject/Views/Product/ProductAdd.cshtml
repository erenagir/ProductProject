@model ProductProject.Data.ProductImage
@{
    ViewData["Title"] = "ProductAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product Add Page</h1>
<br />

<form class="form-group" action="ProductAdd" asp-controller="Product" method="post" enctype="multipart/form-data">
    @Html.Label("Product Name")
    @Html.TextBoxFor(x=>x.Name,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Name,"",new{@style="color:red"})
    <br />
    @Html.Label("Stock")
    @Html.TextBoxFor(x=>x.Stock,new{@class="form-control"})
    <br />
    @Html.Label("Price")
    @Html.TextBoxFor(x=>x.Price,new{@class="form-control"})
    <br />
    @Html.Label("Choose Image")
    @*@Html.TextBoxFor(x=>x.ImageURL,new{@class="form-control"})*@
    <input type="file" name="ImageURL" />
    <br />
    @Html.Label("Category")
    @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.categories,new{@class="form-control"})
    <br />
    @Html.Label("Description")
    @Html.TextAreaFor(x=>x.Description,10,8,new{@class="form-control"})
    <br />
    <button id="btnSave" class="btn btn-info">Save</button>
</form>
<script>
    $(function(){
        $("#btnSave").click(function(){
            alert("Başarıyla eklendi.");
        });
    });
</script>