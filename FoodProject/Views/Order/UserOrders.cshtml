@model List<ProductProject.Data.Models.OrderDetail>
@{
    ViewData["Title"] = "UserOrders";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div class="banner">
    <div class="w3l_banner_nav_right">
        <!-- about -->
        <div class="privacy about">
            <h3>Siparişleriniz (@ViewBag.OrdersCount)</h3>
            <div class="checkout-right">

                @if (@ViewBag.OrdersCount != 0)
                    {
                        <table class="timetable_sub">
                            <thead>
                                <tr>
                                    <th>Ürün Adı</th>
                                    <th class="text-center">Ürün Görsel</th>
                                    <th>Miktar</th>
                                    <th>Fiyat</th>
                                    <th>Sipariş Tarihi</th>
                                </tr>
                            </thead>

                            @foreach (var item in Model)
                            { 
                                <tbody>

                                    <tr class="rem1">
                                        <td class="invert">@item.ProductName</td>
                                        <td class="invert-image"><a href="#"><img src="~/Resimler/@item.ProductImage" alt=" " class="img-responsive"></a></td>
                                        <td class="invert">@item.ProductQuantity</td>
                                        <td class="invert">@item.ProductPrice.ToString("C")</td>
                                        <td class="invert">@item.ProductOrderDate ₺</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                   }
                
            </div>

            <br />
            <a class="btn btn-info" href="/Order/BasketDetails/" style="margin-left:654px; margin-top:8px;">Sepete Dön</a>
            <div class="clearfix"> </div>

        </div>
        <!-- //about -->
    </div>
    <div class="clearfix"></div>
</div>

